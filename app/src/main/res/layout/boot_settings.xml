<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
  	android:layout_width="fill_parent"
  	android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="500dip"
        android:background="@drawable/border_grey_tight_inner"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dip">

        <LinearLayout
            android:id="@+id/llBootSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dip"
            android:gravity="center">

            <TextView
                android:id="@+id/textBootTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Settings"
                android:textSize="28dip"
                android:layout_gravity="center"
                android:padding="10dip"
                android:typeface="sans"/>
    
            <TextView
                android:id="@+id/textBootIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intro string set in Activity."
                android:textColor="@color/rgbeee"
                android:textSize="15dip"
                android:layout_gravity="center"
                android:padding="10dip"
                android:typeface="sans"/>
    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/labelServerIPtext"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Server"
                    android:textSize="14sp"></TextView>
                <EditText
                    android:id="@+id/serverIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:inputType="textUri"
                    android:text=""
                    android:hint="server ip or url"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/labelSMIDtext"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="SmartMenu ID"
                    android:textSize="14sp"></TextView>
                <EditText
                    android:id="@+id/SMID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="12"
                    android:inputType="text"
                    android:text=""
                    android:hint="alphanumeric"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/labelSSL"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rgbeee"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Use SSL Encryption"
                    android:textSize="14sp"></TextView>
                <CheckBox
                    android:id="@+id/SSLprotocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:checked="false"></CheckBox>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/labelCheck204"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rgbeee"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Check Server Available"
                    android:textSize="14sp"></TextView>
                <CheckBox
                    android:id="@+id/Check204"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:checked="false"></CheckBox>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:layout_marginTop="50dip"
                android:visibility="visible"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/settingSaveText"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rgbeee"
                    android:text="Save Settings"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp">
                </TextView>
                <CheckBox
                    android:id="@+id/checkSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="false">
                </CheckBox>
            </LinearLayout>

            <Button
                android:id="@+id/butContinue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Continue"
                android:visibility="visible"
                android:textColor="@color/rgbfff"
                android:textStyle="normal"
                android:textSize="20dip"
                android:layout_marginTop="30dip"
                android:enabled="true"
                android:gravity="left"></Button>

        </LinearLayout>
    </LinearLayout>
</ScrollView>